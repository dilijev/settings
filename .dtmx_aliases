# Bruce's functions
pull_repo() { echo "Pulling in repo $1" && pushd $1 && git pull -r ; popd }
checkout_main() { echo "Checkout latest main in repo $1" && pushd $1 && git checkout main && git fetch origin main && git ff ; popd }
checkout_main_all() { for dir in *; do; checkout_main $dir; done }

