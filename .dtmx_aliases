# NOTE: These need to be functions instead of aliases to pick up the current values of the _F_ variables.
edfx() { echo "open ${PRIMARY_DEBUG_ARM64_ARG} --args ${_LOGGING_ARG} ${_F_DPX_FLAG} ${_F_COMP_FLAG} ${_F_DARK_FLAG} ${_F_UDD_FLAG} ${_F_PROXY_FLAG}" ; }
# NOTE: 'sh -c' to invoke the constructed command because calling `open` on a variable expanded badly with an implied relative path inserted,
# and calling a subshell for the constructed command, i.e. $("command") had weird semantics too.
odfx() { sh -c "open ${PRIMARY_DEBUG_ARM64_ARG} --args ${_LOGGING_ARG} ${_F_DPX_FLAG} ${_F_COMP_FLAG} ${_F_DARK_FLAG} ${_F_UDD_FLAG} ${_F_PROXY_FLAG}" ; }
exlog() { echo "open ${_UDD}/chrome_debug.log" ; }
oxlog() { sh -c "open ${_UDD}/chrome_debug.log" ; }

